@model CustomerLists.Models.MovieViewModel

@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movies</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.MovieName)
        @Html.TextBoxFor(m => m.Movies.MovieName, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Genre)
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Synopsis)
        @Html.TextAreaFor(m => m.Movies.Synopsis, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Rating)
        @Html.TextBoxFor(m => m.Movies.Rating, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movies.InStock)
        @Html.TextBoxFor(m => m.Movies.InStock, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Movies.DateAdded)
        @Html.TextBoxFor(m => m.Movies.DateAdded, new { @class = "form-control" })
    </div>


    <button type="submit" class="btn-primary"> Save Movies</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}